<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @product.user %>
</p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Type:</strong>
  <%= @product.kind %>
</p>

<p>
  <strong>Size:</strong>
  <%= @product.size %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Image data:</strong>
  <td><img src= "<%= @product.image_url %>"></td>
</p>




<div>
  <% @ratings.each do |rating| %>
    <div>
      <strong><%= rating.user %></strong>
      <br />
      <p><%= rating.comment %></p>
      <% if user_signed_in? && rating.user == current_user %>
        <p><%= link_to 'Delete', rating_path(rating), method: :delete %></p>
      <% end %>
    </div>
  <% end %>
  <% if user_signed_in? %>
    <%= render 'ratings/form' %>
  <% end %>
</div>



<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>


<%= link_to 'New Rating', new_rating_path %>
